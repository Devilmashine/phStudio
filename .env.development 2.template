# Development Environment Configuration
# Copy this file to .env and fill in the actual values

# === Database Configuration ===
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/phstudio_dev
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/phstudio_test

# Database Connection Pool Settings (Development)
DB_POOL_SIZE=10
DB_POOL_MAX_OVERFLOW=15
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# === Environment ===
ENV=development

# === Security ===
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_MINUTES=43200
ALGORITHM=HS256

# === CORS Configuration ===
CORS_ORIGINS_STR=http://localhost:3000,http://localhost:5173,http://localhost:8080

# === Telegram Integration ===
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# === Redis Configuration ===
REDIS_URL=redis://localhost:6379/0

# === Logging ===
LOG_LEVEL=DEBUG

# === Frontend URLs (for development) ===
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8888

# === Optional: Google Calendar Integration ===
GOOGLE_CALENDAR_ID=your_google_calendar_id
GOOGLE_CLIENT_EMAIL=your_google_client_email
GOOGLE_PRIVATE_KEY=your_google_private_key

# === Development Tools ===
ENABLE_DB_LOGGING=true
ENABLE_CORS_DEBUG=true