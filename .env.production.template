# Production Environment Configuration
# IMPORTANT: Fill in all values and keep this file secure!

# === Environment ===
ENV=production

# === Database Configuration ===
# Use production PostgreSQL database with proper credentials
DATABASE_URL=postgresql://username:password@host:5432/phstudio_prod

# Production Database Connection Pool Settings (Optimized for high load)
DB_POOL_SIZE=20
DB_POOL_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# === Security (CRITICAL: Change these values!) ===
SECRET_KEY=CHANGE_THIS_TO_SECURE_RANDOM_STRING_AT_LEAST_32_CHARS
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=43200
ALGORITHM=HS256

# === CORS Configuration ===
# Set to your actual production domains
CORS_ORIGINS_STR=https://yourdomain.com,https://www.yourdomain.com

# === Telegram Integration ===
TELEGRAM_BOT_TOKEN=your_production_telegram_bot_token
TELEGRAM_CHAT_ID=your_production_telegram_chat_id

# === Redis Configuration ===
# Use production Redis instance
REDIS_URL=redis://username:password@redis-host:6379/0

# === Logging ===
LOG_LEVEL=INFO

# === Production URLs ===
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com

# === Optional: Google Calendar Integration ===
GOOGLE_CALENDAR_ID=your_production_google_calendar_id
GOOGLE_CLIENT_EMAIL=your_production_google_client_email
GOOGLE_PRIVATE_KEY=your_production_google_private_key

# === Production Optimizations ===
ENABLE_DB_LOGGING=false
ENABLE_CORS_DEBUG=false

# === Monitoring & Health Checks ===
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# === SSL/TLS Settings ===
SSL_ENABLED=true
SSL_REDIRECT=true